# mongod.conf

# for documentation of all options, see:
#   http://docs.mongodb.org/manual/reference/configuration-options/

# Where and how to store data.
storage:
  dbPath: /data/mongodb
  journal:
    enabled: true
#  engine:
#  mmapv1:
#  wiredTiger:

# where to write logging data.
systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log

# network interfaces
net:
  port: 27017
  bindIp: {% if hostvars[inventory_hostname]['host_private_ip'] is defined %}{{ hostvars[inventory_hostname]['host_private_ip'] }}{% else %}{{ hostvars[inventory_hostname]['host_ip'] }}{% endif %},127.0.0.1

#processManagement:


operationProfiling:
  slowOpThresholdMs: 200
  mode: slowOp
  slowOpSampleRate: 100


#sharding:

## Enterprise-Only Options:

